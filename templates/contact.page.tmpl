{{template "base" .}}
{{define "content"}}
<h2>Contacts Page</h2>
<table>
    <thead>
    <tr>
        <th>First</th> <th>Last</th> <th>Phone</th> <th>Email</th> <th>Action</th>
    </tr>
    </thead>
    <tbody>
    {{ range . }}
        <tr>
            <td>{{ .First }}</td>
            <td>{{ .Last }}</td>
            <td>{{ .Phone }}</td>
            <td>{{ .Email }}</td>
            <td>
                <a href="/contact/{{ .ID }}/edit">Edit</a>
                <a href="/contact/{{ .ID }}">View</a>
            </td>
        </tr>
    {{ end }}
    </tbody>
</table>
{{end}}


