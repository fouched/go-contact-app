<div id="archive-ui" hx-target="this" hx-swap="outerHTML">
    {{ if eq .Data.Archive.Status "Running"}}
        <div hx-get="/contacts/archive" hx-trigger="load delay:500ms">
            Creating archive...
            <div class="progress">
                <div class="progress-bar" style="width: {{ .Data.Archive.Progress }}%">
                </div>
            </div>
        </div>
    {{ else if eq .Data.Archive.Status "Complete"}}
        Archive Ready!&nbsp;<a hx-boost="false" href="/contacts/archive/file" target="_blank">Click here to download</a>
        <br>
    {{ else }}
        <button hx-post="/contacts/archive">
            Download Contact Archive
        </button>
    {{ end}}
</div>